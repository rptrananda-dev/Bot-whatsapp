# Bos Upety Bot PRO 24/7 - Environment Configuration
# Copy this file and rename to .env, then fill in your actual values

# Fonnte WhatsApp API Token
# Get from: https://fonnte.com
FONNTE_TOKEN=ISI_TOKEN_FONNTE_DISINI

# Google Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=ISI_API_KEY_GEMINI_DISINI

# Admin Number (Bendahara)
# Format: 6282181151735 (without +)
ADMIN=6282181151735

# Boss Number
# Format: 628115302098 (without +)
BOS=628115302098

# Google Sheets ID
# Get from your Google Sheets URL
SHEET_ID=ISI_ID_SHEET_GOOGLE_DISINI

# Google Drive Folder ID (optional)
# Leave empty to auto-create folder
DRIVE_FOLDER_ID=

# Bot Configuration
BOT_NAME=Bos Upety Bot PRO 24/7
DEBUG_MODE=false
LOG_LEVEL=INFO

# Backup Configuration
MAX_BACKUP_FILES=30
BACKUP_INTERVAL_HOURS=24

# API Timeouts (seconds)
API_TIMEOUT=10
GEMINI_TIMEOUT=15

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300
MAX_ERROR_COUNT=50
